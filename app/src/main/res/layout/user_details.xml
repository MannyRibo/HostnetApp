<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFE8">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Naam:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImage_cardview" />


        <TextView
            android:id="@+id/afdeling_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Afdeling:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title" />

        <TextView
            android:id="@+id/telefoonnummer_details"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Telefoonnummer:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_details" />

        <TextView
            android:id="@+id/rooster_woensdag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Woensdag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rooster_dinsdag" />

        <TextView
            android:id="@+id/rooster_donderdag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Donderdag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rooster_woensdag" />

        <TextView
            android:id="@+id/rooster_vrijdag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Vrijdag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rooster_donderdag" />

        <TextView
            android:id="@+id/rooster_zaterdag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Zaterdag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rooster_vrijdag" />

        <TextView
            android:id="@+id/rooster_maandag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Maandag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefoonnummer_details3" />

        <TextView
            android:id="@+id/rooster_dinsdag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Dinsdag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rooster_maandag" />

        <TextView
            android:id="@+id/rooster_zondag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Zondag:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rooster_zaterdag" />

        <TextView
            android:id="@+id/telefoonnummer_details3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Rooster:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefoonnummer_details" />

        <TextView
            android:id="@+id/email_details"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/profileImage_cardview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="E-mailadres:"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afdeling_details" />

        <ImageView
            android:id="@+id/profileImage_cardview"
            android:layout_width="70dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/profile2" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>