<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#FFFFff">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="8dp">

            <TextView
                android:id="@+id/tijdDinsdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="08:00 - 16:00"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_dinsdag_title"
                app:layout_constraintStart_toStartOf="@+id/tijdMaandag" />

            <TextView
                android:id="@+id/tijdZondag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Vrij"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_zondag_title"
                app:layout_constraintStart_toStartOf="@+id/tijdZaterdag" />

            <TextView
                android:id="@+id/tijdZaterdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Vrij"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_zaterdag_title"
                app:layout_constraintStart_toStartOf="@+id/tijdVrijdag" />

            <TextView
                android:id="@+id/tijdVrijdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="08:00 - 16:00"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_vrijdag_title"
                app:layout_constraintStart_toStartOf="@+id/tijdDonderdag" />

            <TextView
                android:id="@+id/tijdDonderdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="08:00 - 16:00"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_donderdag_title"
                app:layout_constraintStart_toStartOf="@+id/tijdWoensdag" />

            <TextView
                android:id="@+id/tijdWoensdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="08:00 - 16:00"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_woensdag_title"
                app:layout_constraintStart_toStartOf="@+id/tijdDinsdag" />


            <TextView
                android:id="@+id/afdeling_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Afdeling:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/naam_details" />

            <TextView
                android:id="@+id/telefoonnummer_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Telefoonnummer:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_details" />

            <TextView
                android:id="@+id/rooster_woensdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Woensdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_dinsdag_title" />

            <TextView
                android:id="@+id/rooster_donderdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Donderdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_woensdag_title" />

            <TextView
                android:id="@+id/rooster_vrijdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Vrijdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_donderdag_title" />

            <TextView
                android:id="@+id/rooster_zaterdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Zaterdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_vrijdag_title" />

            <TextView
                android:id="@+id/rooster_maandag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Maandag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefoonnummer_details3" />

            <TextView
                android:id="@+id/rooster_dinsdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Dinsdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_maandag_title" />

            <TextView
                android:id="@+id/rooster_zondag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Zondag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_zaterdag_title" />

            <TextView
                android:id="@+id/telefoonnummer_details3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Rooster:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="24sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefoonnummer_details" />

            <TextView
                android:id="@+id/email_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profileImage_cardview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="E-mailadres:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/afdeling_details" />

            <TextView
                android:id="@+id/tijdMaandag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="08:00 - 16:00"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_maandag_title"
                app:layout_constraintStart_toStartOf="@+id/telefoonnummer_details_text" />

            <TextView
                android:id="@+id/naam_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="24dp"
                android:text="Voorbeeldnaam"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/naam_details"
                app:layout_constraintTop_toBottomOf="@+id/profielfoto_details" />

            <TextView
                android:id="@+id/afdeling_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voorbeeldafdeling"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/afdeling_details"
                app:layout_constraintStart_toStartOf="@+id/naam_details_text" />

            <TextView
                android:id="@+id/email_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voorbeeld e-mail"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/email_details"
                app:layout_constraintStart_toStartOf="@+id/afdeling_details_text" />

            <TextView
                android:id="@+id/telefoonnummer_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voorbeeld telnummer"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/telefoonnummer_details"
                app:layout_constraintStart_toStartOf="@+id/email_details_text" />

            <TextView
                android:id="@+id/naam_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Naam:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="?attr/editTextColor"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profielfoto_details" />

            <TextView
                android:id="@+id/profielVan_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Profiel van: "
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profielfoto_details"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:foreground="@drawable/rounded_fg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profielVan_details"
                app:srcCompat="@drawable/profilepicture" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>
