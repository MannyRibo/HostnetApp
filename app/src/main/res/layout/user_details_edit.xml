<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#FFFFff">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="8dp">


            <TextView
                android:id="@+id/rooster_woensdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Woensdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_dinsdag_title" />

            <TextView
                android:id="@+id/rooster_donderdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Donderdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_woensdag_title" />

            <TextView
                android:id="@+id/rooster_vrijdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Vrijdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_donderdag_title" />

            <TextView
                android:id="@+id/rooster_zaterdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Zaterdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_vrijdag_title" />

            <TextView
                android:id="@+id/rooster_maandag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Maandag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profielVan_details" />

            <TextView
                android:id="@+id/rooster_dinsdag_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Dinsdag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_maandag_title" />

            <TextView
                android:id="@+id/rooster_zondag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profielVan_details"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Zondag:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rooster_zaterdag_title" />

            <TextView
                android:id="@+id/profielVan_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Profiel van: "
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextTijdMaandag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rooster_maandag_title" />

            <EditText
                android:id="@+id/editTextTijdDinsdag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_dinsdag_title"
                app:layout_constraintStart_toStartOf="@+id/editTextTijdMaandag" />

            <EditText
                android:id="@+id/editTextTijdWoensdag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_woensdag_title"
                app:layout_constraintStart_toStartOf="@+id/editTextTijdDinsdag" />

            <EditText
                android:id="@+id/editTextTijdDonderdag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_donderdag_title"
                app:layout_constraintStart_toStartOf="@+id/editTextTijdWoensdag" />

            <EditText
                android:id="@+id/editTextTijdVrijdag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_vrijdag_title"
                app:layout_constraintStart_toStartOf="@+id/editTextTijdDonderdag" />

            <EditText
                android:id="@+id/editTextTijdZaterdag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_zaterdag_title"
                app:layout_constraintStart_toStartOf="@+id/editTextTijdVrijdag" />

            <EditText
                android:id="@+id/editTextTijdZondag"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="09:00 - 16:00"
                app:layout_constraintBaseline_toBaselineOf="@+id/rooster_zondag_title"
                app:layout_constraintStart_toStartOf="@+id/editTextTijdZaterdag" />

            <Button
                android:id="@+id/saverooster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:onClick="saveRooster"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="OPSLAAN"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTijdZondag" />

        </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
